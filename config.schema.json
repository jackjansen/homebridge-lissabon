{
  "pluginAlias": "LissabonLighting",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "LissabonLighting"
      },
    
      "options" : {
        "title" : "Options",
        "type" : "object",
        "properties" : {
          "discoverWifi" : {
            "title" : "Auto-discover WiFi devices using mDNS",
            "type": "boolean"
          },
          "discoverBle" : {
            "title" : "Auto-discover Bluetooth LE devices",
            "type": "boolean"
          },
          "devices" : {
            "title" : "Lissabon Devices (if not auto-discovering)",
            "type" : "array",
            "items" : {
              "title" : "Device",
              "type" : "object",
              "properties" : {
                "address" : {
                  "title" : "IP address or hostname, or BLE address",
                  "type" : "string"
                },
                "name" : {
                  "title" : "Name",
                  "type" : "string"
                },
                "type" : {
                  "title" : "Type",
                  "type" : "string",
                  "oneOf": [
                    {
                      "title": "LED Strip",
                      "enum": [
                        "ledstrip"
                      ]
                    },
                    {
                      "title": "Dimmer",
                      "enum": [
                        "dimmer"
                      ]
                    }
                  ]  
                  },
                "hasBrightness" : {
                  "title" : "Supports brightness level",
                  "type" : "boolean"
                },
                "hasTemperature" : {
                  "title" : "Supports color temperature",
                  "type" : "boolean"
                },
                "isBluetooth" : {
                  "title" : "Bluetooth device",
                  "type" : "boolean"
                },
                "isWiFi" : {
                  "title" : "WiFi device",
                  "type" : "boolean"
              }
            }
          }    
        }
      }
    }
  }
}